    <Button
        android:id="@+id/generate_custom_teams_button"
        android:layout_width="259dp"
        android:layout_height="70dp"
        android:layout_marginBottom="28dp"
        android:text="@string/generate_custom_teams_button"
        app:layout_constraintBottom_toTopOf="@+id/generate_random_teams_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/generate_random_teams_button"
        android:layout_width="260dp"
        android:layout_height="72dp"
        android:layout_marginBottom="76dp"
        android:text="@string/generate_random_teams_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>